# Auto detect text files and perform LF normalization
* text=auto

# Force Unix LF endings on checkout for shell scripts and Python files
*.sh text eol=lf
*.py text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf

# Binary files (explicitly mark as binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Configuration files that should always use Unix line endings
.gitignore text eol=lf
.gitattributes text eol=lf
